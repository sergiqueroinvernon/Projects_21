@page
@model CesarWeb.Pages.Cesar.EditModel

@{
    ViewData["Title"] = "Bearbeiten";
}

<h1>Bearbeiten</h1>

<h4>CesarNum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CesarNum.ID" />
            <div class="form-group">
                <label asp-for="CesarNum.Nummer" class="control-label"></label>
                <input asp-for="CesarNum.Nummer" class="form-control" />
                <span asp-validation-for="CesarNum.Nummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CesarNum.Conversion" class="control-label"></label>
                <input asp-for="CesarNum.Conversion" class="form-control" />
                <span asp-validation-for="CesarNum.Conversion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Zurück zur Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
